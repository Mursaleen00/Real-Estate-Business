---
interface Props {
  count: string;
  title: string;
  className?: string;
}

const { count, title, className } = Astro.props;
---

<div
  class={`bg-Grey/10 border border-Grey/15 py-4 px-6 rounded-xl text-center flex flex-col gap-y-2 items-center ${className}`}
>
  <h1 class="font-bold text-2xl lg:text-3xl xl:text-[40px]">{count}+</h1>
  <p class="text-Grey/60 text-sm lg:text-base xl:text-lg">
    {title}
  </p>
</div>
