---
import { Image } from "astro:assets";

interface Props {
  title: string;
  icon: ImageMetadata;
}

const { icon, title } = Astro.props;
---

<div
  class="bg-Grey/10 border border-Grey/15 rounded-xl py-10 px-5 flex flex-col items-center justify-center gap-2.5"
>
  <Image
    src={icon}
    alt={title}
    width={200}
    height={200}
    class="size-12 sm:size-20"
  />
  <p class="text-center text-sm lg:text-base xl:text-xl font-semibold">
    {title}
  </p>
</div>
